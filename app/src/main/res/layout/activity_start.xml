<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <yanzhikai.textpath.AsyncTextPathView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:duration="2000"
            app:showPainter="true"
            app:repeat="REVERSE"
            app:text="Sketcher"
            android:layout_marginBottom="200dp"
            app:pathStrokeColor="#888C8D"
            app:paintStrokeColor="@android:color/holo_orange_light"
            app:showPainterActually="true"
            app:textInCenter="true"
            app:textSize="90sp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/open_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Open project" />

        <Button
            android:id="@+id/new_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="New Project" />
    </LinearLayout>

</FrameLayout>